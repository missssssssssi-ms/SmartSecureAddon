{
 "name": "SmartSecure",
 "version": "1.0.0",
 "manifest_version": 3,
 "description": "より安全にChromeを利用できるようにします｡",
 "permissions": [
  "tabs",
  "scripting",
  "storage"
],
"action": {
 "default_popup": "popup.html"
},
 "content_scripts": [{
  "matches": ["<all_urls>"],
  "js": ["title.js"]
 }]
}